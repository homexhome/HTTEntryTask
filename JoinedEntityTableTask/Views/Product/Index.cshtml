@model IEnumerable<Product>

<h2 class="text-primary">Recently Added Products</h2>
<hr />

<div class="mt-4">
    <a asp-action="Create" class="btn btn-primary">Add New Product</a>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Category Id
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null) {
            @foreach (var obj in Model) {
                <tr>
                    <td width="50%">
                        @obj.Name
                    </td>
                    <td width="50%">
                        @obj.CategoryId
                </tr>
            }
        }
        else {
            <tr>
                <td colspan="2">Product List is Empty</td>
            </tr>
        }
    </tbody>
</table>