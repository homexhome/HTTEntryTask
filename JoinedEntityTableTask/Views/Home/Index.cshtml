@model List<ProductCategoryViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Joined Table Between Product and Category</h1>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Category Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null) {
                @foreach (var obj in Model) {
                    <tr>
                        <td width="50%">
                            @obj.ProductName
                        </td>
                        <td width="50%">
                            @obj.CategoryName
                        </td>
                    </tr>
                }
            }
            else {
                <tr>
                    <td colspan="2">Product List is Empty</td>
                </tr>
            }
        </tbody>
    </table>
</div>
